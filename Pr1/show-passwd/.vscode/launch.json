    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "gcc - Compilar y depurar el archivo activo",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": ["-f", "database", "-a", "3:58943056J:Santiago:Segura", "4:6345239G:Penelope:Cruz"], //"-c", "27:67659034X:Chris:Rock", "23:78675903J:Antonio:Banderas"
            "stopAtEntry": false, // "-a", "3:58943056J:Santiago:Segura", "4:6345239G:Penelope:Cruz"
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilitar la impresión con sangría para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: gcc compilar archivo activo",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}